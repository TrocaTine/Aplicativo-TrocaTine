<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/backgroundBeige"
    tools:context=".ui.trocadinha.TrocadinhasMoreDetails">

    <Button
        android:id="@+id/buttonRemoveTrocadinha"
        android:layout_width="282dp"
        android:layout_height="43dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_border"
        android:onClick="onClickAddToCart"
        android:text="Remover Trocadinha"
        android:textAllCaps="false"
        android:textColor="@color/seaGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddTrocadinha" />

    <Button
        android:id="@+id/buttonAddTrocadinha"
        android:layout_width="282dp"
        android:layout_height="43dp"
        android:layout_marginTop="476dp"
        android:background="@drawable/button_fill"
        android:onClick="onClickBuyNow"
        android:text="Adicionar Trocadinha"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="208dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Detalhes Trocadinhas"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>