<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.newProduct.NewProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonBuy"
            android:layout_width="304dp"
            android:layout_height="51dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/button_border"
            android:drawableStart="@drawable/icon_bag_buy"
            android:drawableTint="@color/seaGreen"
            android:onClick="onClickBuy"
            android:paddingLeft="30px"
            android:text="Venda"
            android:textAllCaps="false"
            android:textColor="@color/seaGreen"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonTrade" />

        <Button
            android:id="@+id/buttonTrade"
            android:layout_width="304dp"
            android:layout_height="51dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/button_border"
            android:drawableStart="@drawable/icon_arrows_trade"
            android:drawableTint="@color/seaGreen"
            android:onClick="onClickTrade"
            android:paddingLeft="30px"
            android:text="Troca"
            android:textAllCaps="false"
            android:textColor="@color/seaGreen"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="48dp"
            android:text="Escolha o tipo do anúncio"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="16dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:onClick="OnClickBack"
            android:src="@drawable/icon_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="148dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Criar Anúncio"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:src="@drawable/flow_new_product1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Selecione uma das opções abaixo:"
            app:layout_constraintStart_toStartOf="@+id/productDescription"
            app:layout_constraintTop_toBottomOf="@+id/productDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>