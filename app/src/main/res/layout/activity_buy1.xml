<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBeige"
    tools:context=".ui.product.buy.Buy1">

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="282dp"
        android:layout_height="43dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/button_fill"
        android:onClick="onClickNext"
        android:text="Prosseguir com o padrão"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddNewAddress" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="15dp"
        android:layout_height="19dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:onClick="OnClickBackActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_arrow_back" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="Comprar"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flow_purchase1" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="Endereço de entrega"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="314dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="Selecione o endereço que deseja usar para realizar a compra"
        app:layout_constraintStart_toStartOf="@+id/productDescription"
        app:layout_constraintTop_toBottomOf="@+id/productDescription" />

    <Button
        android:id="@+id/addressCard"
        android:layout_width="305dp"
        android:layout_height="117dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="179dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Rua blablablabla, xxx CEP: xxxxxx-xxx   São paulo, Sp. Complemento: pipopip"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="Endereço de entrega padrão:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/addressCard"
        app:layout_constraintTop_toTopOf="@+id/addressCard" />

    <Button
        android:id="@+id/buttonAddNewAddress"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_border"
        android:drawableStart="@android:drawable/ic_input_add"
        android:drawableTint="@color/seaGreen"
        android:paddingLeft="30px"
        android:text="Adicionar outro endereço"
        android:textAllCaps="false"
        android:textColor="@color/seaGreen"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressCard" />

</androidx.constraintlayout.widget.ConstraintLayout>